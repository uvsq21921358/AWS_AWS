<!DOCTYPE html>
<html>
  <head>

      
     <link href="css/style.css" type="text/css" rel="stylesheet"/>


  </head>
  <body>

     <h1>Bienvennue Dans Le Jeu De Tron</h1>

    <main>
          <div id="error">
          <% if (locals.error){ %>
           <p><%= error %></p>
          <% } %>

      <aside id="start_menu">
        
        <form name="general"  method="POST" >
          
        <input type="submit"  name="inscrivez" href="enregistrer.ejs" value="inscrivez vous" id="btn_start"/>
        <br>
        <br>
        <br>
        <input type="submit" name="connecter" href="connecter.ejs" value="Connecter" id="btn_start"/>
       
        </form>
         
      </aside>
    </main>
        <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
        <script src="/socket.io/socket.io.js"></script>
         <script>
            var socket = io.connect('http://localhost:1501');
            // On affiche une boîte de dialogue quand le serveur nous envoie un "message"
            socket.on('message', function(message) {
                alert('Le serveur a un message pour vous : ' + message);
            })

            // Lorsqu'on clique sur le bouton, on envoie un "message" au serveur
            $('#btn_start').click(function () {
                socket.emit('message', 'Salut serveur, ça va ?');
            })
        </script>

  </body>
</html>
